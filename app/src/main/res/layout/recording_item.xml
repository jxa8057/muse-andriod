<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="viewModel" type="com.example.finalproject.Recording"></variable>
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <TextView
                android:text="@{viewModel.title}"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingTop="8dp" android:paddingLeft="8dp" android:paddingStart="0dp" android:paddingEnd="0dp"
                android:paddingBottom="8dp" android:paddingRight="8dp"
        />
    </LinearLayout>

</layout>
